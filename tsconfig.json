{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "lib": ["es2015"],
    "module": "es2015",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "outDir": "lib",
    "rootDir": "src/",
    "sourceMap": true,
    "strict": true,
    "target": "es2015"
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}
